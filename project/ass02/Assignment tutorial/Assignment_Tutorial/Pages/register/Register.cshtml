@page
@model MovieWeb.Pages.RegisterModel
@{
    ViewData["Title"] = "Create";
}

<h1>Register</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.HraccountId" class="control-label"></label>
                <input asp-for="Account.HraccountId" class="form-control" />
                <span asp-validation-for="Account.HraccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Hremail" class="control-label"></label>
                <input asp-for="Account.Hremail" class="form-control" />
                <span asp-validation-for="Account.Hremail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Hrpassword" class="control-label"></label>
                <input asp-for="Account.Hrpassword" class="form-control" />
                <span asp-validation-for="Account.Hrpassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Hrfullname" class="control-label"></label>
                <input asp-for="Account.Hrfullname" class="form-control" />
                <span asp-validation-for="Account.Hrfullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div style="color:red;">@Model.msg</div>
        </form>
    </div>
</div>
<p><a href="../login/index">Back to login</a></p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}