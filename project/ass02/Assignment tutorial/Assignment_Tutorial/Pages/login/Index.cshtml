@page
@model Assignment_Tutorial.Pages.login.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="">Please log in here</h1>
<p>Enter your detail below</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.Hremail" class="control-label"></label>
                <input asp-for="Account.Hremail" class="form-control" />
                <span asp-validation-for="Account.Hremail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Hrpassword" class="control-label"></label>
                <input asp-for="Account.Hrpassword" class="form-control" />
                <span asp-validation-for="Account.Hrpassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div style="color:red;">@Model.msg</div>
        </form>
        <p>Don't have account? <a href="../register/Register">Create one</a></p>
    </div>
</div>