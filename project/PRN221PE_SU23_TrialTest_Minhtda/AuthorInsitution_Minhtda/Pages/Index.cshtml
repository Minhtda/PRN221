@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="">Please log in here</h1>
<p>Enter your detail below</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.EmailAddress" class="control-label"></label>
                <input asp-for="Account.EmailAddress" class="form-control" />
                <span asp-validation-for="Account.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.MemberPassword" class="control-label"></label>
                <input asp-for="Account.MemberPassword" class="form-control" />
                <span asp-validation-for="Account.MemberPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div style="color:red;">@Model.msg</div>
        </form>
    </div>
</div>